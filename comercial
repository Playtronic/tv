    <script>
        // ==================== CONFIGURA√á√ÉO DO FIREBASE ====================
        const firebaseConfig = {
            apiKey: "AIzaSyAfD0QOlAVb50612u6siwCxzfZfGmgEB2E",
            authDomain: "playtronic-tv.firebaseapp.com",
            projectId: "playtronic-tv",
            storageBucket: "playtronic-tv.firebasestorage.app",
            messagingSenderId: "272337341020",
            appId: "1:272337341020:web:a30d949985fd614b5c7499",
            measurementId: "G-1QRKY0NN0W"
        };

        if (!firebase.apps.length) {
            firebase.initializeApp(firebaseConfig);
        }

        const auth = firebase.auth();
        const db = firebase.firestore();

        // ==================== VARI√ÅVEIS GLOBAIS ====================
        let currentUser = null;
        let youtubePlayer = null;
        let videoData = null;
        let channelData = null;
        let currentVideoId = null;
        let paymentCheckInterval = null;
        let currentPaymentId = null;
        
        // ==================== FUN√á√ïES DE INICIALIZA√á√ÉO ====================
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('P√°gina comercial.html carregada');
            
            // Verificar se usu√°rio est√° autenticado
            auth.onAuthStateChanged(async (user) => {
                currentUser = user;
                
                if (!user) {
                    showError('Voc√™ precisa estar logado para inserir comerciais. Redirecionando para login...');
                    setTimeout(() => {
                        window.location.href = 'https://canaisdetv.online';
                    }, 2000);
                    return;
                }
                
                // Obter dados do canal da URL
                await loadChannelFromUrl();
            });
        });
        
        // Carregar dados do canal da URL
        async function loadChannelFromUrl() {
            try {
                const urlParams = new URLSearchParams(window.location.search);
                const channelId = urlParams.get('channelId');
                
                if (!channelId) {
                    showError('ID do canal n√£o encontrado na URL.');
                    return;
                }
                
                showLoading('Carregando dados do canal...');
                
                // Buscar dados do canal
                const channelRef = db.collection('channels').doc(channelId);
                const channelDoc = await channelRef.get();
                
                if (!channelDoc.exists) {
                    hideLoading();
                    showError('Canal n√£o encontrado.');
                    return;
                }
                
                channelData = channelDoc.data();
                channelData.id = channelId;
                
                // Buscar configura√ß√µes de monetiza√ß√£o
                const monetizationRef = channelRef.collection('monetization').doc('settings');
                const monetizationDoc = await monetizationRef.get();
                
                if (!monetizationDoc.exists) {
                    hideLoading();
                    showError('Este canal n√£o aceita comerciais pagos.');
                    return;
                }
                
                const monetizationData = monetizationDoc.data();
                
                if (!monetizationData.paidCommercials || !monetizationData.paidCommercials.enabled) {
                    hideLoading();
                    showError('Este canal n√£o aceita comerciais pagos.');
                    return;
                }
                
                // Armazenar dados de comercial pago
                channelData.paidCommercials = monetizationData.paidCommercials;
                
                console.log('Dados do canal carregados:', channelData);
                
                hideLoading();
                
                // Atualizar interface com pre√ßos
                document.getElementById('pricePerSecond').textContent = 
                    `R$ ${channelData.paidCommercials.pricePerSecond.toFixed(2)}/s`;
                document.getElementById('maxDuration').textContent = 
                    `${channelData.paidCommercials.maxDuration} segundos`;
                    
            } catch (error) {
                console.error('Erro ao carregar canal:', error);
                hideLoading();
                showError('Erro ao carregar dados do canal.');
            }
        }
        
        // ==================== FUN√á√ïES DO YOUTUBE ====================
        
        // Inicializar player do YouTube
        function onYouTubeIframeAPIReady() {
            console.log('YouTube API pronta');
        }
        
        // Criar player do YouTube
        function createYouTubePlayer(videoId) {
            if (youtubePlayer) {
                youtubePlayer.destroy();
            }
            
            youtubePlayer = new YT.Player('youtubePlayer', {
                height: '100%',
                width: '100%',
                videoId: videoId,
                playerVars: {
                    'controls': 1,
                    'modestbranding': 1,
                    'rel': 0,
                    'showinfo': 0,
                    'playsinline': 1
                },
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }
        
        function onPlayerReady(event) {
            console.log('Player do YouTube pronto');
            currentVideoId = youtubePlayer.getVideoData().video_id;
            
            // Obter dura√ß√£o do v√≠deo
            const duration = youtubePlayer.getDuration();
            const title = youtubePlayer.getVideoData().title;
            
            // Atualizar interface
            document.getElementById('videoDuration').textContent = formatDuration(duration);
            document.getElementById('videoTitle').textContent = title;
            document.getElementById('videoInfo').style.display = 'block';
            
            // Verificar se o v√≠deo est√° dentro do limite
            if (duration > channelData.paidCommercials.maxDuration) {
                showError(`O v√≠deo excede o tempo m√°ximo permitido de ${channelData.paidCommercials.maxDuration} segundos.`);
                document.getElementById('proceedButton').disabled = true;
                return;
            }
            
            // Calcular pre√ßo
            const pricePerSecond = channelData.paidCommercials.pricePerSecond;
            const totalPrice = duration * pricePerSecond;
            
            document.getElementById('calculatedPrice').textContent = `R$ ${totalPrice.toFixed(2)}`;
            document.getElementById('totalPrice').style.display = 'block';
            
            // Habilitar bot√£o de prosseguir
            document.getElementById('proceedButton').disabled = false;
            
            // Armazenar dados do v√≠deo
            videoData = {
                videoId: currentVideoId,
                url: `https://www.youtube.com/watch?v=${currentVideoId}`,
                duration: duration,
                title: title,
                totalPrice: totalPrice,
                thumbnail: `https://img.youtube.com/vi/${currentVideoId}/hqdefault.jpg`
            };
            
            console.log('Dados do v√≠deo:', videoData);
        }
        
        function onPlayerStateChange(event) {
            // N√£o √© necess√°rio para esta aplica√ß√£o
        }
        
        // ==================== FUN√á√ïES DA INTERFACE ====================
        
        // Visualizar v√≠deo
        function previewVideo() {
            const videoUrl = document.getElementById('videoUrl').value.trim();
            const payerEmail = document.getElementById('payerEmail').value.trim();
            
            // Valida√ß√µes
            if (!videoUrl) {
                showError('Por favor, insira uma URL do YouTube.');
                return;
            }
            
            if (!payerEmail || !isValidEmail(payerEmail)) {
                showError('Por favor, insira um e-mail v√°lido.');
                return;
            }
            
            if (!channelData) {
                showError('Dados do canal n√£o carregados. Tente recarregar a p√°gina.');
                return;
            }
            
            // Extrair ID do v√≠deo do YouTube
            const videoId = extractYouTubeId(videoUrl);
            
            if (!videoId) {
                showError('URL do YouTube inv√°lida. Certifique-se de que √© um link do YouTube.');
                return;
            }
            
            // Mostrar √°rea de preview
            document.getElementById('videoPreview').style.display = 'block';
            document.getElementById('videoPlaceholder').style.display = 'none';
            
            // Carregar player do YouTube
            createYouTubePlayer(videoId);
            
            hideError();
        }
        
        // Prosseguir para pagamento
        function proceedToPayment() {
            if (!videoData || !currentUser) {
                showError('Dados incompletos. Tente novamente.');
                return;
            }
            
            // Mostrar √°rea de pagamento
            document.getElementById('videoForm').style.display = 'none';
            document.getElementById('videoPreview').style.display = 'none';
            document.getElementById('pixArea').style.display = 'block';
            
            // Gerar pagamento PIX
            generatePixPayment();
        }
        
        // ==================== FUN√á√ïES DE PAGAMENTO PIX ====================
        
        // Gerar pagamento PIX
        async function generatePixPayment() {
            showLoading('Gerando pagamento PIX...');
            
            try {
                const payerEmail = document.getElementById('payerEmail').value.trim();
                
                // Dados para a API do Mercado Pago
                const paymentData = {
                    channelId: channelData.id,
                    channelName: channelData.name || 'Canal sem nome',
                    amount: videoData.totalPrice,
                    videoData: videoData,
                    payerEmail: payerEmail,
                    payerId: currentUser.uid,
                    payerName: currentUser.displayName || currentUser.email,
                    paymentType: 'commercial'
                };
                
                console.log('Enviando dados para API:', paymentData);
                
                // Chamar Cloud Function para criar pagamento PIX
                const response = await fetch('https://us-central1-playtronic-tv.cloudfunctions.net/createPixPayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(paymentData)
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${await response.text()}`);
                }
                
                const result = await response.json();
                
                if (!result.success) {
                    throw new Error(result.error || 'Erro ao gerar pagamento');
                }
                
                console.log('Pagamento gerado:', result);
                
                currentPaymentId = result.paymentId;
                
                // Exibir QR Code
                if (result.qrCodeBase64) {
                    displayQRCode(result.qrCodeBase64);
                }
                
                // Exibir c√≥digo PIX
                if (result.pixCode) {
                    document.getElementById('pixCode').value = result.pixCode;
                }
                
                // Iniciar verifica√ß√£o de status
                startPaymentStatusCheck();
                
                hideLoading();
                
            } catch (error) {
                console.error('Erro ao gerar pagamento:', error);
                hideLoading();
                showError(`Erro ao gerar pagamento: ${error.message}`);
            }
        }
        
        // Exibir QR Code
        function displayQRCode(base64Data) {
            const qrcodeContainer = document.getElementById('qrcode');
            qrcodeContainer.innerHTML = `<img src="data:image/png;base64,${base64Data}" alt="QR Code PIX" style="width: 100%; height: auto;">`;
        }
        
        // Copiar c√≥digo PIX
        function copyPixCode() {
            const pixCode = document.getElementById('pixCode');
            pixCode.select();
            pixCode.setSelectionRange(0, 99999);
            document.execCommand('copy');
            
            const copyButton = document.getElementById('copyPixCode');
            const originalText = copyButton.textContent;
            copyButton.textContent = 'C√≥digo copiado!';
            copyButton.style.background = '#2ecc71';
            
            setTimeout(() => {
                copyButton.textContent = originalText;
                copyButton.style.background = '#3498db';
            }, 2000);
        }
        
        // Verificar status do pagamento
        async function checkPaymentStatus() {
            if (!currentPaymentId) return null;
            
            try {
                const response = await fetch(`https://us-central1-playtronic-tv.cloudfunctions.net/checkPaymentStatus?paymentId=${currentPaymentId}`);
                
                if (response.ok) {
                    const result = await response.json();
                    return result.success ? result : null;
                }
                
                return null;
            } catch (error) {
                console.error('Erro ao verificar status:', error);
                return null;
            }
        }
        
        // Iniciar verifica√ß√£o peri√≥dica
        function startPaymentStatusCheck() {
            if (paymentCheckInterval) {
                clearInterval(paymentCheckInterval);
            }
            
            updatePaymentStatusUI('pending');
            
            paymentCheckInterval = setInterval(async () => {
                const paymentData = await checkPaymentStatus();
                
                if (paymentData) {
                    updatePaymentStatusUI(paymentData.status);
                    
                    if (paymentData.status === 'approved') {
                        // Pagamento aprovado, salvar comercial
                        clearInterval(paymentCheckInterval);
                        saveCommercialToFirestore();
                    } else if (paymentData.status === 'rejected') {
                        // Pagamento rejeitado
                        clearInterval(paymentCheckInterval);
                        setTimeout(() => {
                            showError('Pagamento rejeitado. Tente novamente.');
                        }, 2000);
                    }
                }
            }, 5000); // Verificar a cada 5 segundos
        }
        
        // Atualizar UI do status
        function updatePaymentStatusUI(status) {
            const paymentStatus = document.getElementById('paymentStatus');
            paymentStatus.style.display = 'block';
            paymentStatus.className = 'payment-status status-' + status;
            
            switch(status) {
                case 'pending':
                    paymentStatus.innerHTML = '<strong>‚è≥ Aguardando pagamento...</strong><br><small>Escaneie o QR Code ou copie o c√≥digo PIX.</small>';
                    break;
                case 'approved':
                    paymentStatus.innerHTML = '<strong>‚úÖ Pagamento confirmado!</strong><br><small>Salvando seu comercial...</small>';
                    break;
                case 'rejected':
                    paymentStatus.innerHTML = '<strong>‚ùå Pagamento n√£o realizado</strong><br><small>O pagamento n√£o foi conclu√≠do.</small>';
                    break;
                default:
                    paymentStatus.innerHTML = `<strong>üìù Status: ${status}</strong>`;
            }
        }
        
        // ==================== FUN√á√ïES DO FIRESTORE ====================
        
        // Salvar comercial no Firestore
        async function saveCommercialToFirestore() {
            showLoading('Salvando comercial...');
            
            try {
                const now = new Date();
                const expiresAt = new Date(now.getTime() + (24 * 60 * 60 * 1000)); // 24 horas
                
                const commercialData = {
                    videoUrl: videoData.url,
                    videoId: videoData.videoId,
                    videoTitle: videoData.title,
                    videoDuration: videoData.duration,
                    thumbnail: videoData.thumbnail,
                    pricePaid: videoData.totalPrice,
                    payerEmail: document.getElementById('payerEmail').value.trim(),
                    payerId: currentUser.uid,
                    payerName: currentUser.displayName || currentUser.email,
                    channelId: channelData.id,
                    channelName: channelData.name,
                    paymentId: currentPaymentId,
                    status: 'active',
                    createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                    expiresAt: expiresAt,
                    willExpireAt: firebase.firestore.Timestamp.fromDate(expiresAt)
                };
                
                console.log('Salvando comercial:', commercialData);
                
                // Salvar na cole√ß√£o de comerciais pagos
                const commercialRef = await db.collection('paid_commercials').add(commercialData);
                
                // Tamb√©m adicionar √† lista de comerciais do canal
                const channelCommercialsRef = db.collection('channels').doc(channelData.id)
                    .collection('commercials').doc(commercialRef.id);
                
                await channelCommercialsRef.set({
                    ...commercialData,
                    commercialId: commercialRef.id
                });
                
                console.log('Comercial salvo com ID:', commercialRef.id);
                
                // Programar exclus√£o autom√°tica ap√≥s 24 horas
                scheduleCommercialDeletion(commercialRef.id, expiresAt);
                
                // Mostrar mensagem de sucesso
                hideLoading();
                document.getElementById('pixArea').style.display = 'none';
                document.getElementById('successMessage').style.display = 'block';
                
                // Redirecionar ap√≥s alguns segundos
                setTimeout(() => {
                    window.location.href = `https://canaisdetv.online/canais/${channelData.id.toLowerCase().replace(/[^a-z0-9]/g, '-')}.html`;
                }, 5000);
                
            } catch (error) {
                console.error('Erro ao salvar comercial:', error);
                hideLoading();
                showError('Erro ao salvar comercial. Contate o suporte.');
            }
        }
        
        // Programar exclus√£o autom√°tica
        function scheduleCommercialDeletion(commercialId, expiresAt) {
            const timeUntilDeletion = expiresAt.getTime() - Date.now();
            
            if (timeUntilDeletion > 0) {
                setTimeout(async () => {
                    try {
                        // Excluir da cole√ß√£o principal
                        await db.collection('paid_commercials').doc(commercialId).delete();
                        
                        // Excluir da cole√ß√£o do canal
                        await db.collection('channels').doc(channelData.id)
                            .collection('commercials').doc(commercialId).delete();
                            
                        console.log(`Comercial ${commercialId} exclu√≠do automaticamente ap√≥s 24 horas.`);
                    } catch (error) {
                        console.error('Erro ao excluir comercial automaticamente:', error);
                    }
                }, timeUntilDeletion);
            }
        }
        
        // ==================== FUN√á√ïES AUXILIARES ====================
        
        // Extrair ID do YouTube da URL
        function extractYouTubeId(url) {
            const patterns = [
                /(?:youtube\.com\/watch\?v=|youtu\.be\/|youtube\.com\/embed\/)([a-zA-Z0-9_-]+)/,
                /youtube\.com\/.*[?&]v=([^&]+)/,
                /youtu\.be\/([a-zA-Z0-9_-]+)/
            ];
            
            for (const pattern of patterns) {
                const match = url.match(pattern);
                if (match && match[1]) {
                    return match[1];
                }
            }
            
            return null;
        }
        
        // Formatar dura√ß√£o
        function formatDuration(seconds) {
            const minutes = Math.floor(seconds / 60);
            const remainingSeconds = Math.floor(seconds % 60);
            return `${minutes}:${remainingSeconds.toString().padStart(2, '0')} (${seconds} segundos)`;
        }
        
        // Validar e-mail
        function isValidEmail(email) {
            const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        }
        
        // Mostrar/ocultar loading
        function showLoading(message = 'Processando...') {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('loadingMessage').textContent = message;
        }
        
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        // Mostrar/ocultar erro
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }
        
        function hideError() {
            document.getElementById('errorMessage').style.display = 'none';
        }
    </script>
