        if (!firebase.apps.length) {
            firebase.initializeApp(firebaseConfig);
        }

        const auth = firebase.auth();
        const db = firebase.firestore();

        // üîê EMAILS AUTORIZADOS
        const AUTHORIZED_EMAILS = [
            'playtronicpublisher@mail.com',
            'playtronic@mail.com', 
            'frenimattos@mail.com'
        ];

        // üìä DADOS DO DASHBOARD
        let currentUser = null;
        let allPayments = [];
        let filteredPayments = [];
        let channels = [];
        let currentPage = 1;
        const itemsPerPage = 15;

        // üõ°Ô∏è VERIFICAR ACESSO
        function checkAuthorization(user) {
            if (!user || !user.email) {
                return false;
            }
            
            const userEmail = user.email.toLowerCase();
            return AUTHORIZED_EMAILS.includes(userEmail);
        }

        // üî¥ REDIRECIONAR USU√ÅRIOS N√ÉO AUTORIZADOS
        function redirectUnauthorized() {
            window.location.href = 'https://canaisdetv.online/Gerador';
        }

        // üë§ ATUALIZAR INFO DO USU√ÅRIO
        function updateUserInfo(user) {
            document.getElementById('userName').textContent = user.displayName || 'Administrador';
            document.getElementById('userEmail').textContent = user.email;
            
            // Inicializar avatar
            const avatar = document.getElementById('userAvatar');
            if (user.displayName) {
                const initials = user.displayName.split(' ').map(n => n[0]).join('').toUpperCase();
                avatar.textContent = initials.substring(0, 2);
            }
        }

        // üìä CARREGAR DADOS DO DASHBOARD
        async function loadDashboardData() {
            showLoading();
            
            try {
                // Carregar pagamentos
                const paymentsSnapshot = await db.collection('payment_history')
                    .orderBy('createdAt', 'desc')
                    .get();
                
                allPayments = [];
                paymentsSnapshot.forEach(doc => {
                    const data = doc.data();
                    allPayments.push({
                        id: doc.id,
                        ...data,
                        createdAt: data.createdAt?.toDate() || new Date()
                    });
                });
                
                // Carregar canais
                const channelsSnapshot = await db.collection('channels').get();
                channels = [];
                channelsSnapshot.forEach(doc => {
                    const data = doc.data();
                    channels.push({
                        id: doc.id,
                        ...data
                    });
                });
                
                // Atualizar filtros de canal
                updateChannelFilter();
                
                // Aplicar filtros iniciais
                applyFilters();
                
                // Atualizar resumo
                updateSummary();
                
                hideLoading();
                
            } catch (error) {
                console.error('Erro ao carregar dados:', error);
                showAlert('Erro ao carregar dados do dashboard', 'error');
                hideLoading();
            }
        }

        // üîÑ ATUALIZAR FILTRO DE CANAIS
        function updateChannelFilter() {
            const channelFilter = document.getElementById('channelFilter');
            
            // Limpar op√ß√µes exceto "Todos"
            while (channelFilter.options.length > 1) {
                channelFilter.remove(1);
            }
            
            // Adicionar canais
            channels.forEach(channel => {
                const option = document.createElement('option');
                option.value = channel.id;
                option.textContent = channel.name || `Canal ${channel.id.substring(0, 8)}...`;
                channelFilter.appendChild(option);
            });
        }

        // üéØ APLICAR FILTROS
        function applyFilters() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const channelId = document.getElementById('channelFilter').value;
            const status = document.getElementById('statusFilter').value;
            const paymentId = document.getElementById('paymentIdFilter').value.toLowerCase();
            const payerEmail = document.getElementById('payerEmailFilter').value.toLowerCase();
            
            filteredPayments = allPayments.filter(payment => {
                // Filtro por data
                if (startDate) {
                    const paymentDate = payment.createdAt.toISOString().split('T')[0];
                    if (paymentDate < startDate) return false;
                }
                
                if (endDate) {
                    const paymentDate = payment.createdAt.toISOString().split('T')[0];
                    if (paymentDate > endDate) return false;
                }
                
                // Filtro por canal
                if (channelId && payment.channelId !== channelId) {
                    return false;
                }
                
                // Filtro por status
                if (status && payment.status !== status) {
                    return false;
                }
                
                // Filtro por ID do pagamento
                if (paymentId && !payment.id.toLowerCase().includes(paymentId) && 
                    !payment.paymentId?.toLowerCase().includes(paymentId)) {
                    return false;
                }
                
                // Filtro por email do doador
                if (payerEmail && payment.payerEmail && 
                    !payment.payerEmail.toLowerCase().includes(payerEmail)) {
                    return false;
                }
                
                return true;
            });
            
            // Resetar para p√°gina 1
            currentPage = 1;
            
            // Atualizar tabela
            updatePaymentsTable();
            updatePagination();
            updateChannelSummary();
        }

        // üìã ATUALIZAR TABELA DE PAGAMENTOS
        function updatePaymentsTable() {
            const tbody = document.getElementById('paymentsTableBody');
            
            if (filteredPayments.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="9" style="text-align: center; padding: 40px;">
                            Nenhum pagamento encontrado com os filtros aplicados.
                        </td>
                    </tr>
                `;
                return;
            }
            
            // Calcular √≠ndices para pagina√ß√£o
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pagePayments = filteredPayments.slice(startIndex, endIndex);
            
            let html = '';
            
            pagePayments.forEach(payment => {
                const channel = channels.find(c => c.id === payment.channelId);
                const channelName = channel?.name || `Canal ${payment.channelId?.substring(0, 8)}...`;
                
                // Formatar datas
                const date = payment.createdAt.toLocaleDateString('pt-BR');
                const time = payment.createdAt.toLocaleTimeString('pt-BR', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
                
                // Status badges
                let statusBadge = '';
                let transferBadge = '';
                
                switch(payment.status) {
                    case 'pending':
                        statusBadge = '<span class="status-badge status-pending">Pendente</span>';
                        break;
                    case 'received':
                        statusBadge = '<span class="status-badge status-received">Recebido</span>';
                        break;
                    case 'cancelled':
                        statusBadge = '<span class="status-badge status-cancelled">Cancelado</span>';
                        break;
                    default:
                        statusBadge = '<span class="status-badge status-pending">Desconhecido</span>';
                }
                
                switch(payment.transferStatus) {
                    case 'pending':
                    case 'pending_payment':
                        transferBadge = '<span class="status-badge status-pending">Pendente</span>';
                        break;
                    case 'paid':
                        transferBadge = '<span class="status-badge status-paid">Pago</span>';
                        break;
                    default:
                        transferBadge = '<span class="status-badge status-pending">N√£o Repassado</span>';
                }
                
                html += `
                    <tr>
                        <td>
                            <strong>${payment.paymentId || payment.id.replace('payment_', '')}</strong><br>
                            <small style="opacity: 0.7;">${payment.payerEmail || 'Email n√£o informado'}</small>
                        </td>
                        <td>
                            ${date}<br>
                            <small style="opacity: 0.7;">${time}</small>
                        </td>
                        <td>${channelName}</td>
                        <td><strong>R$ ${(payment.amount || 0).toFixed(2)}</strong></td>
                        <td>R$ ${(payment.split?.platform || 0).toFixed(2)}</td>
                        <td>R$ ${(payment.split?.channel || 0).toFixed(2)}</td>
                        <td>${statusBadge}</td>
                        <td>${transferBadge}</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn view" onclick="viewPaymentDetails('${payment.id}')">
                                    üëÅÔ∏è Detalhes
                                </button>
                                ${payment.status === 'received' && payment.transferStatus !== 'paid' ? `
                                    <button class="action-btn pay" onclick="markPaymentAsPaid('${payment.id}')">
                                        ‚úÖ Pagar
                                    </button>
                                ` : ''}
                            </div>
                        </td>
                    </tr>
                `;
            });
            
            tbody.innerHTML = html;
        }

        // üî¢ ATUALIZAR PAGINA√á√ÉO
        function updatePagination() {
            const totalPages = Math.ceil(filteredPayments.length / itemsPerPage);
            
            document.getElementById('prevPage').disabled = currentPage === 1;
            document.getElementById('nextPage').disabled = currentPage === totalPages || totalPages === 0;
            document.getElementById('pageInfo').textContent = `P√°gina ${currentPage} de ${totalPages} (${filteredPayments.length} itens)`;
        }

        // üìà ATUALIZAR RESUMO
        function updateSummary() {
            if (allPayments.length === 0) return;
            
            // Totais gerais
            const totalReceived = allPayments.reduce((sum, p) => sum + (p.amount || 0), 0);
            const totalPlatform = allPayments.reduce((sum, p) => sum + (p.split?.platform || 0), 0);
            const totalChannel = allPayments.reduce((sum, p) => sum + (p.split?.channel || 0), 0);
            
            // Pagamentos de hoje
            const today = new Date().toISOString().split('T')[0];
            const todayPayments = allPayments.filter(p => 
                p.createdAt.toISOString().split('T')[0] === today
            );
            
            const todayReceived = todayPayments.reduce((sum, p) => sum + (p.amount || 0), 0);
            const todayPlatform = todayPayments.reduce((sum, p) => sum + (p.split?.platform || 0), 0);
            const todayChannel = todayPayments.reduce((sum, p) => sum + (p.split?.channel || 0), 0);
            
            // Pendentes de pagamento
            const pendingPayments = allPayments.filter(p => 
                p.status === 'received' && p.transferStatus !== 'paid'
            );
            const totalPending = pendingPayments.reduce((sum, p) => sum + (p.split?.channel || 0), 0);
            
            // Atualizar cards
            document.getElementById('totalReceived').textContent = `R$ ${totalReceived.toFixed(2)}`;
            document.getElementById('platformCommission').textContent = `R$ ${totalPlatform.toFixed(2)}`;
            document.getElementById('dueToChannels').textContent = `R$ ${totalPending.toFixed(2)}`;
            document.getElementById('totalPayments').textContent = allPayments.length;
            
            // Percentuais de mudan√ßa (simulado)
            document.getElementById('totalChange').textContent = `+${todayPayments.length} hoje`;
            document.getElementById('commissionChange').textContent = `R$ ${todayPlatform.toFixed(2)} hoje`;
            document.getElementById('dueChange').textContent = `${pendingPayments.length} pendentes`;
            document.getElementById('paymentsChange').textContent = `+${todayPayments.length} hoje`;
        }

        // üìä ATUALIZAR RESUMO POR CANAL
        function updateChannelSummary() {
            const channelId = document.getElementById('channelFilter').value;
            const container = document.getElementById('channelSummary');
            
            if (!channelId) {
                // Resumo geral
                const channelTotals = {};
                
                allPayments.forEach(payment => {
                    if (!channelTotals[payment.channelId]) {
                        channelTotals[payment.channelId] = {
                            total: 0,
                            platform: 0,
                            channel: 0,
                            pending: 0
                        };
                    }
                    
                    channelTotals[payment.channelId].total += payment.amount || 0;
                    channelTotals[payment.channelId].platform += payment.split?.platform || 0;
                    channelTotals[payment.channelId].channel += payment.split?.channel || 0;
                    
                    if (payment.status === 'received' && payment.transferStatus !== 'paid') {
                        channelTotals[payment.channelId].pending += payment.split?.channel || 0;
                    }
                });
                
                // Ordenar por total devido
                const sortedChannels = Object.entries(channelTotals)
                    .sort(([, a], [, b]) => b.pending - a.pending)
                    .slice(0, 5); // Top 5
                
                let html = '<div style="display: grid; gap: 15px;">';
                
                sortedChannels.forEach(([channelId, totals]) => {
                    const channel = channels.find(c => c.id === channelId);
                    const channelName = channel?.name || `Canal ${channelId.substring(0, 8)}...`;
                    
                    html += `
                        <div style="background: rgba(0,0,0,0.3); padding: 15px; border-radius: 10px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                                <strong>${channelName}</strong>
                                <span class="status-badge ${totals.pending > 0 ? 'status-pending' : 'status-paid'}">
                                    ${totals.pending > 0 ? 'Devendo' : 'Em dia'}
                                </span>
                            </div>
                            <div style="font-size: 0.9rem; opacity: 0.9;">
                                Total Recebido: <strong>R$ ${totals.total.toFixed(2)}</strong><br>
                                Sua Parte: <strong>R$ ${totals.platform.toFixed(2)}</strong><br>
                                Devido ao Canal: <strong>R$ ${totals.pending.toFixed(2)}</strong>
                            </div>
                        </div>
                    `;
                });
                
                html += '</div>';
                container.innerHTML = html;
                
            } else {
                // Resumo do canal espec√≠fico
                const channel = channels.find(c => c.id === channelId);
                const channelPayments = allPayments.filter(p => p.channelId === channelId);
                
                const totalReceived = channelPayments.reduce((sum, p) => sum + (p.amount || 0), 0);
                const totalPlatform = channelPayments.reduce((sum, p) => sum + (p.split?.platform || 0), 0);
                const totalChannel = channelPayments.reduce((sum, p) => sum + (p.split?.channel || 0), 0);
                
                const pendingPayments = channelPayments.filter(p => 
                    p.status === 'received' && p.transferStatus !== 'paid'
                );
                const totalPending = pendingPayments.reduce((sum, p) => sum + (p.split?.channel || 0), 0);
                
                const html = `
                    <div style="text-align: center;">
                        <h3 style="color: #fdbb2d; margin-bottom: 20px;">${channel?.name || 'Canal'}</h3>
                        
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px; margin-bottom: 20px;">
                            <div style="background: rgba(0,0,0,0.3); padding: 15px; border-radius: 10px;">
                                <div style="font-size: 0.9rem; opacity: 0.9;">Total Recebido</div>
                                <div style="font-size: 1.5rem; font-weight: bold; color: #fdbb2d;">
                                    R$ ${totalReceived.toFixed(2)}
                                </div>
                            </div>
                            <div style="background: rgba(0,0,0,0.3); padding: 15px; border-radius: 10px;">
                                <div style="font-size: 0.9rem; opacity: 0.9;">Sua Parte (8%)</div>
                                <div style="font-size: 1.5rem; font-weight: bold; color: #2ecc71;">
                                    R$ ${totalPlatform.toFixed(2)}
                                </div>
                            </div>
                        </div>
                        
                        <div style="background: ${totalPending > 0 ? 'rgba(231, 76, 60, 0.1)' : 'rgba(46, 204, 113, 0.1)'}; 
                             padding: 20px; border-radius: 10px; border: 1px solid ${totalPending > 0 ? '#e74c3c' : '#2ecc71'};">
                            <div style="font-size: 0.9rem; opacity: 0.9;">Devido ao Canal (92%)</div>
                            <div style="font-size: 2rem; font-weight: bold; color: ${totalPending > 0 ? '#e74c3c' : '#2ecc71'};">
                                R$ ${totalPending.toFixed(2)}
                            </div>
                            <div style="font-size: 0.9rem; margin-top: 10px;">
                                ${pendingPayments.length} pagamento(s) pendente(s)
                            </div>
                        </div>
                    </div>
                `;
                
                container.innerHTML = html;
            }
        }

        // üëÅÔ∏è VER DETALHES DO PAGAMENTO
        async function viewPaymentDetails(paymentId) {
            showLoading();
            
            try {
                const paymentDoc = await db.collection('payment_history').doc(paymentId).get();
                
                if (!paymentDoc.exists) {
                    showAlert('Pagamento n√£o encontrado', 'error');
                    hideLoading();
                    return;
                }
                
                const payment = paymentDoc.data();
                const channel = channels.find(c => c.id === payment.channelId);
                
                // Buscar transfer√™ncia pendente relacionada
                const transferQuery = await db.collection('pending_transfers')
                    .where('paymentId', '==', payment.paymentId || paymentId.replace('payment_', ''))
                    .get();
                
                let transferData = null;
                if (!transferQuery.empty) {
                    transferData = transferQuery.docs[0].data();
                }
                
                // Formatar dados para o modal
                const modalBody = document.getElementById('modalBody');
                modalBody.innerHTML = `
                    <div class="modal-field">
                        <div class="field-label">ID do Pagamento</div>
                        <div class="field-value">${payment.paymentId || paymentId}</div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Canal</div>
                        <div class="field-value">${channel?.name || payment.channelId}</div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Doador</div>
                        <div class="field-value">${payment.payerEmail || 'N√£o informado'}</div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Data e Hora</div>
                        <div class="field-value">${payment.createdAt?.toDate().toLocaleString('pt-BR') || 'N√£o dispon√≠vel'}</div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Valor Total</div>
                        <div class="field-value">R$ ${(payment.amount || 0).toFixed(2)}</div>
                    </div>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin: 20px 0;">
                        <div style="background: rgba(46, 204, 113, 0.1); padding: 15px; border-radius: 8px; border: 1px solid rgba(46, 204, 113, 0.3);">
                            <div style="font-size: 0.9rem; opacity: 0.9;">Sua Parte (8%)</div>
                            <div style="font-size: 1.5rem; font-weight: bold; color: #2ecc71;">
                                R$ ${(payment.split?.platform || 0).toFixed(2)}
                            </div>
                        </div>
                        <div style="background: rgba(52, 152, 219, 0.1); padding: 15px; border-radius: 8px; border: 1px solid rgba(52, 152, 219, 0.3);">
                            <div style="font-size: 0.9rem; opacity: 0.9;">Devido ao Canal (92%)</div>
                            <div style="font-size: 1.5rem; font-weight: bold; color: #3498db;">
                                R$ ${(payment.split?.channel || 0).toFixed(2)}
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Status do Pagamento</div>
                        <div class="field-value">
                            ${payment.status === 'pending' ? '‚è≥ Pendente' : 
                              payment.status === 'received' ? '‚úÖ Recebido' : 
                              payment.status === 'cancelled' ? '‚ùå Cancelado' : 'Desconhecido'}
                        </div>
                    </div>
                    
                    <div class="modal-field">
                        <div class="field-label">Status do Repasse</div>
                        <div class="field-value">
                            ${payment.transferStatus === 'paid' ? '‚úÖ Pago ao Canal' : 
                              '‚è≥ Aguardando Repasse'}
                        </div>
                    </div>
                    
                    ${transferData ? `
                        <div class="modal-field">
                            <div class="field-label">ID da Transfer√™ncia</div>
                            <div class="field-value">${transferData.transferId || 'N√£o realizada'}</div>
                        </div>
                        
                        <div class="modal-field">
                            <div class="field-label">Data do Repasse</div>
                            <div class="field-value">${transferData.paymentDate?.toDate().toLocaleString('pt-BR') || 'N√£o realizado'}</div>
                        </div>
                    ` : ''}
                    
                    <div class="modal-field">
                        <div class="field-label">Observa√ß√µes</div>
                        <div class="field-value">${payment.notes || 'Nenhuma observa√ß√£o'}</div>
                    </div>
                `;
                
                // Mostrar/ocultar bot√£o de marcar como pago
                const markAsPaidBtn = document.getElementById('markAsPaidBtn');
                if (payment.status === 'received' && payment.transferStatus !== 'paid') {
                    markAsPaidBtn.style.display = 'block';
                    markAsPaidBtn.onclick = () => markPaymentAsPaid(paymentId);
                } else {
                    markAsPaidBtn.style.display = 'none';
                }
                
                // Mostrar modal
                document.getElementById('paymentModal').style.display = 'flex';
                
                hideLoading();
                
            } catch (error) {
                console.error('Erro ao buscar detalhes:', error);
                showAlert('Erro ao carregar detalhes do pagamento', 'error');
                hideLoading();
            }
        }

        // ‚úÖ MARCAR PAGAMENTO COMO PAGO
        async function markPaymentAsPaid(paymentId) {
            if (!confirm('Tem certeza que deseja marcar este pagamento como pago ao canal?')) {
                return;
            }
            
            showLoading();
            
            try {
                const paymentRef = db.collection('payment_history').doc(paymentId);
                const paymentDoc = await paymentRef.get();
                
                if (!paymentDoc.exists) {
                    throw new Error('Pagamento n√£o encontrado');
                }
                
                const payment = paymentDoc.data();
                
                // Atualizar status
                await paymentRef.update({
                    transferStatus: 'paid',
                    transferredAt: firebase.firestore.FieldValue.serverTimestamp(),
                    notes: `Repassado manualmente por ${currentUser.email} em ${new Date().toLocaleString('pt-BR')}`
                });
                
                // Atualizar tamb√©m na cole√ß√£o pending_transfers se existir
                const transferQuery = await db.collection('pending_transfers')
                    .where('paymentId', '==', payment.paymentId || paymentId.replace('payment_', ''))
                    .get();
                
                if (!transferQuery.empty) {
                    const transferDoc = transferQuery.docs[0];
                    await transferDoc.ref.update({
                        youHavePaid: true,
                        transferStatus: 'paid',
                        paymentDate: firebase.firestore.FieldValue.serverTimestamp()
                    });
                }
                
                // Recarregar dados
                await loadDashboardData();
                
                showAlert('‚úÖ Pagamento marcado como pago com sucesso!', 'success');
                
                // Fechar modal
                document.getElementById('paymentModal').style.display = 'none';
                
                hideLoading();
                
            } catch (error) {
                console.error('Erro ao marcar como pago:', error);
                showAlert('Erro ao marcar pagamento como pago: ' + error.message, 'error');
                hideLoading();
            }
        }

        // üì• EXPORTAR PARA CSV
        function exportToCSV() {
            if (filteredPayments.length === 0) {
                showAlert('N√£o h√° dados para exportar', 'error');
                return;
            }
            
            // Cabe√ßalhos
            const headers = [
                'ID Pagamento',
                'Data',
                'Canal',
                'Email Doador',
                'Valor Total',
                'Plataforma (8%)',
                'Canal (92%)',
                'Status Pagamento',
                'Status Repasse'
            ];
            
            // Dados
            const rows = filteredPayments.map(payment => {
                const channel = channels.find(c => c.id === payment.channelId);
                
                return [
                    payment.paymentId || payment.id,
                    payment.createdAt.toLocaleDateString('pt-BR'),
                    channel?.name || payment.channelId,
                    payment.payerEmail || '',
                    `R$ ${(payment.amount || 0).toFixed(2)}`,
                    `R$ ${(payment.split?.platform || 0).toFixed(2)}`,
                    `R$ ${(payment.split?.channel || 0).toFixed(2)}`,
                    payment.status,
                    payment.transferStatus || 'pending'
                ];
            });
            
            // Criar CSV
            const csvContent = [
                headers.join(','),
                ...rows.map(row => row.map(cell => `"${cell}"`).join(','))
            ].join('\n');
            
            // Criar blob e baixar
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            
            link.setAttribute('href', url);
            link.setAttribute('download', `pagamentos_${new Date().toISOString().split('T')[0]}.csv`);
            link.style.visibility = 'hidden';
            
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showAlert('‚úÖ Arquivo CSV exportado com sucesso!', 'success');
        }

        // üí¨ MOSTRAR ALERTA
        function showAlert(message, type) {
            const alert = document.getElementById('alertMessage');
            alert.innerHTML = `
                <div>${message}</div>
                <button class="alert-close" onclick="this.parentElement.style.display='none'">√ó</button>
            `;
            alert.className = `alert-message alert-${type}`;
            alert.style.display = 'flex';
            
            // Auto-esconder ap√≥s 5 segundos
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        }

        // ‚è≥ MOSTRAR LOADING
        function showLoading() {
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        // üöÄ INICIALIZA√á√ÉO
        document.addEventListener('DOMContentLoaded', function() {
            // üîê VERIFICAR AUTENTICA√á√ÉO
            auth.onAuthStateChanged(async (user) => {
                if (!user) {
                    // Usu√°rio n√£o logado
                    redirectUnauthorized();
                    return;
                }
                
                // Verificar se o email est√° autorizado
                if (!checkAuthorization(user)) {
                    showAlert('‚ö†Ô∏è Acesso negado. Esta conta n√£o tem permiss√£o para acessar o dashboard.', 'error');
                    setTimeout(redirectUnauthorized, 2000);
                    return;
                }
                
                // Usu√°rio autorizado
                currentUser = user;
                updateUserInfo(user);
                
                // Carregar dados do dashboard
                await loadDashboardData();
                
                // Configurar intervalo de atualiza√ß√£o autom√°tica (5 minutos)
                setInterval(loadDashboardData, 5 * 60 * 1000);
            });
            
            // üìÖ CONFIGURAR DATAS PADR√ÉO (√∫ltimos 30 dias)
            const today = new Date();
            const thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(today.getDate() - 30);
            
            document.getElementById('startDate').value = thirtyDaysAgo.toISOString().split('T')[0];
            document.getElementById('endDate').value = today.toISOString().split('T')[0];
            
            // üéØ CONFIGURAR EVENT LISTENERS
            document.getElementById('applyFilters').addEventListener('click', applyFilters);
            document.getElementById('resetFilters').addEventListener('click', function() {
                document.getElementById('startDate').value = thirtyDaysAgo.toISOString().split('T')[0];
                document.getElementById('endDate').value = today.toISOString().split('T')[0];
                document.getElementById('channelFilter').value = '';
                document.getElementById('statusFilter').value = '';
                document.getElementById('paymentIdFilter').value = '';
                document.getElementById('payerEmailFilter').value = '';
                applyFilters();
            });
            
            document.getElementById('refreshData').addEventListener('click', loadDashboardData);
            document.getElementById('exportBtn').addEventListener('click', exportToCSV);
            
            document.getElementById('prevPage').addEventListener('click', function() {
                if (currentPage > 1) {
                    currentPage--;
                    updatePaymentsTable();
                    updatePagination();
                }
            });
            
            document.getElementById('nextPage').addEventListener('click', function() {
                const totalPages = Math.ceil(filteredPayments.length / itemsPerPage);
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePaymentsTable();
                    updatePagination();
                }
            });
            
            document.getElementById('closeModal').addEventListener('click', function() {
                document.getElementById('paymentModal').style.display = 'none';
            });
            
            document.getElementById('closeModalBtn').addEventListener('click', function() {
                document.getElementById('paymentModal').style.display = 'none';
            });
            
            document.getElementById('logoutBtn').addEventListener('click', function() {
                auth.signOut().then(() => {
                    window.location.href = 'https://canaisdetv.online/Gerador';
                });
            });
            
            // Permitir fechar modal clicando fora
            document.getElementById('paymentModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    this.style.display = 'none';
                }
            });
            
            // Permitir busca com Enter
            document.getElementById('paymentIdFilter').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') applyFilters();
            });
            
            document.getElementById('payerEmailFilter').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') applyFilters();
            });
        });
    </script>
</body>
</html>
